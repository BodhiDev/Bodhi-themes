      file					= "Scrollbars/stepper-left-insens.png"
      stretch				= TRUE
      arrow_direction	= LEFT
    }
  }
}

class "GtkScrollbar"       		style "scrollbar"

style "scrolledwindow" = "default"
{
    GtkScrolledWindow ::scrollbars-within-bevel = 0
    GtkScrolledWindow ::scrollbar-spacing = 1
    
 	xthickness = 2
	ythickness = 2

    engine "pixmap"
    {
    	 
	  image
          {
                function = SHADOW
		state = INSENSITIVE
                file	= "Scrollbars/scrolled.png"
                border ={4,4,4,4}
                detail = "scrolled_window"
          }

          image
          {
                function = SHADOW
                file	= "Scrollbars/scrolled.png"
                border ={4,4,4,4}
                detail = "scrolled_window"
          }
   
 }
    
}
class "GtkScrolledWindow" style "scrolledwindow"

