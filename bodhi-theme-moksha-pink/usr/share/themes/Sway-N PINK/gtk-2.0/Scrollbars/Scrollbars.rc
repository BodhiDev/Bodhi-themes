      recolorable			= TRUE
      state					= INSENSITIVE
      file					= "Scrollbars/stepper-up-insens.png"
      stretch				= TRUE
      arrow_direction	= UP
    }

 ######### DOWN ############

    image 
    {
      function				= STEPPER
      recolorable			= TRUE
      state					= NORMAL
      file					= "Scrollbars/stepper-down.png"
      stretch				= TRUE
      arrow_direction	= DOWN
